generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum userRole {
  ADMIN
  USER
}

enum Difficulty{
  EASY
  MEDIUM
  HARD
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      userRole @default(USER)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  problems Problem[]
}

model Problem{
  id        String   @id @default(cuid())
  title String
  description String
  difficulty Difficulty
  tags String[] //tag1,tag2
  userId String
  example Json
  constraints String
  hints String?
  editorial String?

  testcases Json
  codeSnippets Json
  referenceSoloution Json

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

//relation with user
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
}